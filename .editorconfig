root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,js,html,scss}]
indent_size = 4
indent_style = tab

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{yml,json}]
indent_style = space
indent_size = 2

[*.txt]
insert_final_newline = false
